@model IEnumerable<temp0.Models.News_images>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/adm.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.image_path)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.image_name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.image_volume)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.image_path)
            <img src="~/Uploads/@item.image_path" alt="Alternate Text" width="100" height="100" />
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.image_name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.image_volume)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.id }) |
            @Html.ActionLink("Details", "Details", new { id=item.id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.id })
        </td>
    </tr>
}

</table>
